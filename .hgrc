[ui]
username=Liu Bin <bliu@shancetech.com>
merge = vimdiff

[extensions]
rebase =
strip = 
hgext.extdiff = 
graphlog =
color = 
pager = 

[merge-tools]
vimdiff.executable = vimdiff
vimdiff.args = -f -d $output -M $local $base $other -c "wincmd J" -c "set modifiable" -c "set write"
vimdiff.premerge = keep

[extdiff]
cmd.vimdiff = 

[alias]
# vi = vimdiff
# vim = vimdiff

[pager]
pager = LESS='FSRX' less
# attend = 
ignore = vimdiff
